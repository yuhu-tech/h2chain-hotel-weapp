/* pages/h2-order/list-order/list-order.wxss */

page {
  padding: 30rpx 30rpx 150rpx;
  height: 100%;
  background-color: #f8f8f8;
}

.page {
  height: 100%;
}

/* picker */

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #c8c8c8;
  background-color: #ececec;
  border-radius: 10rpx;
  padding: 0 30rpx;
}

/* card */

image {
  border-radius: 10%;
}

.wux-card__extra {
  font-size: 10pt !important;
}

.card_count_isSex {
  margin-right: 30rpx;
}

.link {
  display: flex;
}

.link_arrow {
  margin-top: 3rpx;
  margin-left: 30rpx;
}

.foot {
  display: flex;
  justify-content: flex-end;
  width: 100%;
}

.wux-divider--text-right:before {
  width: 100% !important;
}

.wux-divider--text-right:after {
  width: 100% !important;
}

.divider_r .wux-divider .wux-divider__text {
  color: #ff482c !important;
  font-weight: normal !important;
}

.divider_n .wux-divider .wux-divider__text {
  color: #c8c8c8 !important;
  font-weight: normal !important;
}

/* card-foot */

.wux-card {
  padding: 0 !important;
}

.wux-card__bd {
  border-bottom: solid 1rpx rgba(217, 217, 217, 0.5);
  padding: 30rpx !important;
}

.wux-card__ft {
  padding: 30rpx !important;
}

/* none */

.none, .none_top, .none_btm {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.none {
  height: 100%;
  justify-content: space-between;
}

.none_top image {
  height: 300rpx;
  width: 300rpx;
}

.access {
  height: 30rpx;
  width: 30rpx;
  border-width: 4rpx 4rpx 0 0;
  border-style: solid;
  transform: matrix(-0.71, 0.71, -0.71, -0.71, 0, 0);
  margin-right: 4rpx;
}

.access_top {
  margin-top: 20rpx;
  margin-bottom: -15rpx;
}

/* modified */

.card_line {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
