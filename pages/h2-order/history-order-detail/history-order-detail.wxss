/* pages/h2-order/history-order-detail/history-order-detail.wxss */

page {
  background-color: #f5f5f5;
}

/* card */

.top_card {
  padding: 30rpx 40rpx;
  background-color: #fff;
}

.top_card_cen {
  display: flex;
  justify-content: space-between;
}

.blank {
  margin-left: 20rpx;
}

.top_card_btm {
  display: flex;
}

.top_card_btm_name {
  margin: 0 20rpx;
}

.top_card_btm_phone {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  border-left: solid 1rpx #eee;
}

.img_phone {
  height: 30rpx;
  width: 30rpx;
}

/* search */

.search {
  padding: 30rpx;
}

.search_p {
  text-align: center;
}

input {
  background-color: #ececec;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  text-align: center;
  position: relative;
}

.arrow {
  position: absolute;
  top: 5%;
  right: 5%;
}

/* list */

.list {
  padding: 0 30rpx;
}

.list_card {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 10rpx;
}

.list_card_avatar {
  height: 80rpx;
  width: 80rpx;
  border-radius: 10%;
}

.list_card_l, .list_card_r {
  display: flex;
  align-items: center;
}

.list_card_name {
  width: 120rpx;
  margin-left: 50rpx;
}

.link_arrow {
  margin-top: 5rpx;
  margin-left: 20rpx;
}
