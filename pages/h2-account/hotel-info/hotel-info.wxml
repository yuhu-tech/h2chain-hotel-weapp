<!--pages/h2-account/hotel-info/hotel-info.wxml-->
<view class="page">
  <view class="page__hd">
    <view class="page__title"></view>
    <view class="page__desc"></view>
  </view>
  <view class="page__bd">
    <swiper indicator-dots autoplay indicator-color="rgba(255, 255, 255, .3)" indicator-active-color="#fff">
      <block wx:for="{{imgUrls}}" wx:key="index">
        <swiper-item>
          <image src="{{item}}" class="slide-image" />
        </swiper-item>
      </block>
    </swiper>
    <view class='text_tip hotel-name'>希尔顿酒店</view>
    <wux-cell-group>
      <wux-white-space body-style='height:20rpx' />
      <wux-cell thumb="/images/hotel-location.png" title="青岛市黄岛区嘉陵江东路1号" hover-class="none"></wux-cell>
      <wux-cell thumb="/images/hotel-phone.png" title="0532-123456789" hover-class="none"></wux-cell>
      <wux-white-space body-style='height:20rpx' />
    </wux-cell-group>
    <view>
      <view class='hotel-info-title'>酒店简介</view>
      <view class='hotel-info-content'>这里是很多很多很多很多很多很多很多很多很多很多很多很多很多很多很多很多很多很多很多很多很多很多很多很多很多很多很多很多很多很多很多很多很多很多的酒店简介</view>
    </view>
  </view>
</view>