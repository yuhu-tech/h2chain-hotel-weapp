<!-- pages/h2Account/home/home.wxml -->
<view class="page">
  <view class="page__hd">
    <view class="page__title"></view>
    <view class="page__desc"></view>
  </view>
  <view class="page__bd">
    <wux-row>
      <view class='info_card'>
        <view>一只麻辣烈雀</view>
        <image class='avatar' src='/images/pic.jpg'></image>
      </view>
    </wux-row>
    <wux-row>
      <wux-cell-group>
        <wux-cell title="手机" extra='1234567' hover-class="none"></wux-cell>
        <view class='bd_btm' />
        <wux-cell title="酒店名称" extra='希尔顿酒店' hover-class="none"></wux-cell>
        <view class='bd_btm' />
        <wux-cell title="职位" extra='HR' hover-class="none"></wux-cell>
      </wux-cell-group>
    </wux-row>
    <wux-white-space body-style='height:15rpx' />
    <wux-row>
      <wux-cell-group>
        <wux-cell thumb="/images/home-hotel.png" title="酒店详情" isLink url="/pages/h2-account/hotel-info/hotel-info" open-type="navigateTo"></wux-cell>
        <view class='bd_btm' />
        <wux-cell thumb="/images/home-history.png" title="历史订单" isLink url="/pages/h2-order/history-order/history-order" open-type="navigateTo"></wux-cell>
        <view class='bd_btm' />
        <wux-cell thumb="/images/home-lock.png" title="修改密码" isLink url="/pages/h2-account/change-password/change-password" open-type="navigateTo"></wux-cell>
        <view class='bd_btm' />
      </wux-cell-group>
    </wux-row>
    <wux-row>
      <view class='logout y200'>退出登录</view>
    </wux-row>
  </view>
</view>