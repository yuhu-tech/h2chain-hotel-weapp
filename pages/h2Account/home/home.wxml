<view class="page">
  <view class="page__hd">
    <view class="page__title"></view>
    <view class="page__desc"></view>
  </view>
  <view class="page__bd">
    <wux-row>
      <view class='info_card'>
        <view>一只麻辣烈雀</view>
        <image class='avatar' src='/images/pic.jpg'></image>
      </view>
    </wux-row>
    <row>
      <wux-cell-group>
        <wux-cell title="手机" extra='1234567'></wux-cell>
        <wux-cell title="酒店名称" extra='希尔顿酒店'></wux-cell>
        <wux-cell title="职位" extra='HR'></wux-cell>
      </wux-cell-group>
    </row>
    <wux-white-space body-style='height:15rpx' />
    <row>
      <wux-cell-group>
        <wux-cell thumb="/images/pic.jpg" title="酒店详情" isLink url="/pages/h2Account/login/login" open-type="switchTab"></wux-cell>
        <wux-cell thumb="/images/pic.jpg" title="历史订单" isLink url="/pages/h2Account/login/login" open-type="switchTab"></wux-cell>
        <wux-cell thumb="/images/pic.jpg" title="修改密码" isLink url="/pages/h2Account/login/login" open-type="switchTab"></wux-cell>
      </wux-cell-group>
      <view class='bd_btm' />
    </row>
    <row>
      <view class='logout y200'>退出登录</view>
    </row>
  </view>
</view>